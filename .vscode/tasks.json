{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start All Services",
      "dependsOn": [
        "Start Gateway",
        "Start Orchestrator",
        "Start Builder",
        "Start Runner"
      ],
      "problemMatcher": []
    },
    {
      "label": "Start Gateway",
      "type": "shell",
      "command": "$env:KUBECONFIG='${workspaceFolder}\\infra\\terraform\\kubeconfig'; dotnet run -c Release --no-build",
      "options": {
        "cwd": "${workspaceFolder}/src/Gateway"
      },
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false,
        "group": "services"
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*)$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Building.*",
          "endsPattern": "^.*Application started.*|^.*Now listening on.*"
        }
      }
    },
    {
      "label": "Start Orchestrator",
      "type": "shell",
      "command": "$env:KUBECONFIG='${workspaceFolder}\\infra\\terraform\\kubeconfig'; dotnet run -c Release --no-build",

        "cwd": "${workspaceFolder}/src/Orchestrator"
      },
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false,
        "group": "services"
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*)$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Building.*",
          "endsPattern": "^.*Application started.*|^.*Now listening on.*"
        }
      }
    },
    {
      "label": "Start Builder",
      "type": "shell",
      "command": "$env:KUBECONFIG='${workspaceFolder}\\infra\\terraform\\kubeconfig'; dotnet run -c Release --no-build",
      "options": {
        "cwd": "${workspaceFolder}/src/Builder"
      },
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false,
        "group": "services"
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*)$",
          "file": 1,

          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Building.*",
          "endsPattern": "^.*Application started.*|^.*Now listening on.*"
        }
      }
    },
    {
      "label": "Stop All Services",
      "type": "shell",
      "command": "echo",
      "args": ["Press Ctrl+C in each terminal to stop services"],
      "problemMatcher": []
    }
  ]
